<?php

namespace App\Filament\Resources;

use App\Filament\Resources\AlmacenResource\Pages;
use App\Filament\Resources\AlmacenResource\RelationManagers;
use App\Models\Almacen;
use App\Models\Empleado;
use App\Models\Proyecto;
use Filament\Forms;
use Filament\Forms\Form;
use Filament\Resources\Resource;
use Filament\Tables;
use Filament\Tables\Table;
use Illuminate\Database\Eloquent\Builder;
use Illuminate\Support\Facades\DB;

class AlmacenResource extends Resource
{
    protected static ?string $model = Almacen::class;

    protected static ?string $navigationIcon = 'heroicon-o-building-storefront';
    protected static ?string $modelLabel = 'Almacén';
    protected static ?string $pluralModelLabel = 'Almacenes';
    protected static ?string $navigationGroup = 'Gestión de Materiales';
    protected static ?int $navigationSort = 1;

    public static function form(Form $form): Form
    {
        return $form
            ->schema([
                Forms\Components\Section::make('Información Básica')
                    ->schema([
                        Forms\Components\TextInput::make('codigo_almacen')
                            ->label('Código de Almacén')
                            ->required()
                            ->maxLength(50)
                            ->unique(ignoreRecord: true)
                            ->columnSpan(1),
                            
                        Forms\Components\TextInput::make('nombre')
                            ->required()
                            ->maxLength(255)
                            ->columnSpan(2),
                            
                        Forms\Components\Select::make('tipo')
                            ->options([
                                'central' => 'Central',
                                'proyecto' => 'Proyecto',
                                'temporal' => 'Temporal',
                            ])
                            ->required()
                            ->live()
                            ->afterStateUpdated(fn (callable $set) => $set('cod_proy', null))
                            ->columnSpan(1),
                            
                        Forms\Components\Select::make('cod_proy')
                            ->label('Proyecto')
                            ->options(fn (callable $get) => 
                                $get('tipo') === 'proyecto' 
                                    ? Proyecto::pluck('nombre_ubicacion', 'cod_proy')
                                    : []
                            )
                            ->searchable()
                            ->columnSpan(1)
                            ->hidden(fn (callable $get) => $get('tipo') !== 'proyecto'),
                            
                        Forms\Components\Select::make('responsable')
                            ->label('Responsable')
                            ->options(Empleado::pluck('nombre_completo', 'cod_empleado'))
                            ->searchable()
                            ->required()
                            ->columnSpan(1),
                            
                        Forms\Components\Select::make('id_almacen_padre')
                            ->label('Almacén Padre')
                            ->options(fn (?Almacen $record) => 
                                Almacen::where('tipo', 'central')
                                    ->where('id_almacen', '!=', $record?->id_almacen)
                                    ->pluck('nombre', 'id_almacen')
                            )
                            ->searchable()
                            ->columnSpan(1)
                            ->hidden(fn (callable $get) => $get('tipo') === 'central'),
                            
                        Forms\Components\Toggle::make('activo')
                            ->default(true)
                            ->columnSpan(1),
                    ])
                    ->columns(3),
                    
                Forms\Components\Section::make('Ubicación')
                    ->schema([
                        Forms\Components\Textarea::make('direccion')
                            ->columnSpan(3),
                            
                        Forms\Components\TextInput::make('ciudad')
                            ->default('La Paz')
                            ->columnSpan(1),
                            
                        Forms\Components\TextInput::make('pais')
                            ->default('Bolivia')
                            ->columnSpan(1),
                            
                        Forms\Components\TextInput::make('latitud')
                            ->numeric()
                            ->columnSpan(1),
                            
                        Forms\Components\TextInput::make('longitud')
                            ->numeric()
                            ->columnSpan(1),
                            
                        Forms\Components\Select::make('tipo_ubicacion')
                            ->options([
                                'almacen' => 'Almacén',
                                'temporal' => 'Ubicación Temporal',
                            ])
                            ->default('almacen')
                            ->columnSpan(1),
                    ])
                    ->columns(3)
                    ->collapsible(),
            ]);
    }

    public static function table(Table $table): Table
    {
        return $table
            ->columns([
                Tables\Columns\TextColumn::make('codigo_almacen')
                    ->label('Código')
                    ->searchable()
                    ->sortable(),
                    
                Tables\Columns\TextColumn::make('nombre')
                    ->searchable()
                    ->sortable(),
                    
                Tables\Columns\TextColumn::make('tipo')
                    ->badge()
                    ->formatStateUsing(fn (string $state): string => match ($state) {
                        'central' => 'Central',
                        'proyecto' => 'Proyecto',
                        'temporal' => 'Temporal',
                    })
                    ->color(fn (string $state): string => match ($state) {
                        'central' => 'primary',
                        'proyecto' => 'success',
                        'temporal' => 'warning',
                    }),
                    
                Tables\Columns\TextColumn::make('proyecto.nombre_ubicacion')
                    ->label('Proyecto')
                    ->placeholder('N/A')
                    ->toggleable(isToggledHiddenByDefault: true),
                    
                Tables\Columns\TextColumn::make('responsableEmpleado.nombre_completo')
                    ->label('Responsable')
                    ->searchable()
                    ->toggleable(),
                    
                Tables\Columns\TextColumn::make('ciudad')
                    ->toggleable(isToggledHiddenByDefault: true),
                    
                Tables\Columns\IconColumn::make('activo')
                    ->boolean()
                    ->sortable(),
                    
                Tables\Columns\TextColumn::make('created_at')
                    ->dateTime()
                    ->sortable()
                    ->toggleable(isToggledHiddenByDefault: true),
            ])
            ->filters([
                Tables\Filters\SelectFilter::make('tipo')
                    ->options([
                        'central' => 'Central',
                        'proyecto' => 'Proyecto',
                        'temporal' => 'Temporal',
                    ]),
                    
                Tables\Filters\SelectFilter::make('proyecto')
                    ->relationship('proyecto', 'nombre_ubicacion')
                    ->searchable()
                    ->preload(),
                    
                Tables\Filters\TernaryFilter::make('activo')
                    ->label('¿Activo?')
                    ->boolean(),
            ])
            ->actions([
                Tables\Actions\ViewAction::make(),
                Tables\Actions\EditAction::make(),
            ])
            ->bulkActions([
                Tables\Actions\BulkActionGroup::make([
                    Tables\Actions\DeleteBulkAction::make(),
                ]),
            ])
            ->defaultSort('tipo')
            ->defaultSort('nombre');
    }

    public static function getRelations(): array
    {
        return [
            RelationManagers\SubalmacenesRelationManager::class,
        ];
    }

    public static function getPages(): array
    {
        return [
            'index' => Pages\ListAlmacens::route('/'),
            'create' => Pages\CreateAlmacen::route('/create'),
            'view' => Pages\ViewAlmacen::route('/{record}'),
            'edit' => Pages\EditAlmacen::route('/{record}/edit'),
        ];
    }

    public static function getEloquentQuery(): Builder
    {
        return parent::getEloquentQuery()
            ->with(['proyecto', 'responsableEmpleado', 'almacenPadre']);
    }
}
